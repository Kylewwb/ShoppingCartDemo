<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.sunxu3074.shoppoingdemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_shopping_cart_black_48dp"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".activity.AllActivity"
            android:label="@string/app_name"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CategoryDetailsActivity"
            android:label="@string/title_activity_category_details"
            android:parentActivityName=".activity.AllActivity"
            >
        </activity>
        <activity
            android:name=".activity.ProductDetailsActivity"
            android:label="@string/title_activity_product_details"
            android:parentActivityName=".activity.CategoryDetailsActivity"
             >
        </activity>
        <activity
            android:name=".activity.ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart"
            >
        </activity>
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
    </application>

</manifest>
